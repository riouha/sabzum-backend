version: "3"
services:
  sabzum-backend:
    container_name: sabzum-backend
    build: .
    restart: unless-stopped
    environment:
      DB_HOST: postgres
      DB_PORT: 5432
      DB_USER: user
      DB_PASSWORD: pass
      DB_NAME: dbname
    ports:
      - "3400:3400"
    volumes:
      - ./uploads:/app/uploads
    networks:
      - postgresql_pgnet

networks:
  postgresql_pgnet:
    external: true
